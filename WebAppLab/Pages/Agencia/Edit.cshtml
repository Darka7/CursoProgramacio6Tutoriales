@page
@model WebAppLab.Pages.Agencia.EditModel
@{
}


<div id="AppEdit" class="container" data-entity="@JsonSerializer.Serialize(Model.Entity)">
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue ? "Actualizar":"Nuevo")
        </div>
        <div class="card-body">
            <form id="FormEdit" method="post">

                <input type="hidden" asp-for="Entity.AgenciaId" />

                <div class="form-group mb-3">
                    <label for="Entity.Nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" asp-for="Entity.Nombre" maxlength="250" required>
                </div>


                <div class="form-group mb-3">
                    <label for="Entity.IdCatalogoProvincia" class="form-label">Provincia</label>

                    <select asp-for="Entity.IdCatalogoProvincia" class="form-select"
                            asp-items="@(new SelectList(Model.ProvinciaLista,"IdCatalogoProvincia","NombreCatalogoProvincia"))" required>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.IdCatalogoProvincia" class="form-label">Canton</label>

                    <select asp-for="Entity.IdCatalogoCanton" class="form-select"
                            asp-items="@(new SelectList(Model.ProvinciaLista,"IdCatalogoCanton","NombreCatalogoCanton"))" required>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.IdCatalogoProvincia" class="form-label">Distrito</label>

                    <select asp-for="Entity.IdCatalogoDistrito" class="form-select"
                            asp-items="@(new SelectList(Model.DistritoLista,"IdCatalogoDistrito","NombreCatalogoDistrito"))" required>
                    </select>
                </div>


                <div class="form-group form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="Entity.Estado" value="true">
                    <label class="form-check-label" for="Entity_Estado">Estado</label>
                </div>

                <div class="row">
                    <div class="col-4">
                        <button type="submit" class="btn btn-outline-primary">
                            @(Model.id.HasValue ? "Actualizar":"Agregar")
                        </button>
                    </div>
                </div>

            </form>


        </div>
    </div>
</div>

@section Scripts{

    <script defer src="~/App/Vehiculo/Edit.js"></script>

}

